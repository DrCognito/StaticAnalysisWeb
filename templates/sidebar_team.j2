<!-- Side navigation -->
<div class="sidenav", id="navbar">
{% if "top" in navigators %}
    {% for nav in navigators["top"] %}
        {% if nav[1] == "__dataset__" %}
            {% if dataset_list is not none %}
                <button class="dropdown-btn">Data Sets
                <div class="fa fa-caret-down">â–¼</div>
                </button>
                <div class="dropdown-container">
                {% for set in dataset_list %}
                    <a href={{ url_for(provider, team=team, dataset=set, side=side, postfix=postfix)}}>{{set}}</a>
                {% endfor %}
                </div>
            {% endif %}
        {% else %}
            <a href={{nav[1]}}>{{nav[0]}}</a>
        {% endif %}
    {% endfor %}
    <hr>
{% endif %}
{% if "dire" in navigators %}
    <button class="accordion header highlight", id="dire">DIRE</button>
    <div class="panel">
    {% for nav in navigators["dire"] %}
        <a href={{nav[1]}}>{{nav[0]}}</a>
    {% endfor %}
    </div>
    <hr>
{% endif %}
{% if "radiant" in navigators %}
    <button class="accordion header highlight", id="radiant">RADIANT</button>
    <div class="panel">
    {% for nav in navigators["radiant"] %}
        <a href={{nav[1]}}>{{nav[0]}}</a>
    {% endfor %}
    </div>
    <hr>
{% endif %}
{% if "summary" in navigators %}
    {% for nav in navigators["summary"] %}
        <a href={{nav[1]}}>{{nav[0]}}</a>
    {% endfor %}
{% endif %}
</div>

<script type="text/javascript">
// Adapted from:
// https://www.w3schools.com/howto/howto_js_accordion.asp

var acc = document.getElementsByClassName("accordion");
var i;

for (i = 0; i < acc.length; i++) {
  acc[i].addEventListener("click", function() {
    /* Toggle between adding and removing the "active" class,
    to highlight the button that controls the panel */
    this.classList.toggle("active");

    /* Toggle between hiding and showing the active panel */
    var panel = this.nextElementSibling;
    if (panel.style.display === "block") {
      panel.style.display = "none";
    } else {
      panel.style.display = "block";
    }
  });
}
{% if active is not none %}
console.log("Active area: {{active}}");
document.getElementById("{{active}}").click();
{%else%}
console.log("No active area (active none)")
{% endif %}
</script>
<script type="text/javascript">
// Adapted from:
// https://www.w3schools.com/howto/howto_js_dropdown_sidenav.asp
//* Loop through all dropdown buttons to toggle between hiding and showing its dropdown content - This allows the user to have multiple dropdowns without any conflict */
var dropdown = document.getElementsByClassName("dropdown-btn");
var i;

for (i = 0; i < dropdown.length; i++) {
  dropdown[i].addEventListener("click", function() {
    this.classList.toggle("active");
    var dropdownContent = this.nextElementSibling;
    if (dropdownContent.style.display === "block") {
      dropdownContent.style.display = "none";
    } else {
      dropdownContent.style.display = "block";
    }
  });
}
</script>